<h4>Search Results: <%= @movies.length %></h4>

<% @movies.each_with_index do |movie, index| %>
<p><%= link_to movie.title, movie_path(movie) %></p>
<% end %>

<% if @movies.blank? %>
  <h4>There are no movies containing the term <%= params[:search] %>.</h4>
<% end %>

<p><%= link_to "Back to Index", movies_path %></p>
